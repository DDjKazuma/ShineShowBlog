<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-md-5">
      <div class="card card-user">
        <div class="image">
<!--          <img src="../../assets/img/background.jpg" alt="..."/>-->
          <% if @user.avatar.attached? %>
              <%= image_tag @user.background.variant auto_orient: true %>
          <% end %>
        </div>
        <div class="card-content">
          <div class="author">
<!--            <img class="avatar border-white" src="../../assets/img/faces/face-2.jpg" alt="..."/>-->
            <%= image_tag @user.avatar.variant(auto_orient: true), class: "avatar border-white" %>
            <h4 class="card-title"><%= @user.username %><br />
              <a href="#"><small><%= @user.email %></small></a>
            </h4>
          </div>
<!--          <p class="description text-center">-->
<!--            "I like the way you work it <br>-->
<!--            No diggity <br>-->
<!--            I wanna bag it up"-->
<!--          </p>-->
        </div>
        <hr>
        <div class="text-center">
          <div class="row">
            <div class="col-md-4 col-md-offset-2">
              <h5><%= @user.articles.size %><br /><small>文章</small></h5>
            </div>
            <div class="col-md-4">
              <h5>0<br /><small>浏览数</small></h5>
            </div>
<!--            <div class="col-md-3">-->
<!--              <h5>24,6$<br /><small>Spent</small></h5>-->
<!--            </div>-->
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-8 col-md-7">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">编辑个人信息</h4>
        </div>
        <div class="card-content">
          <%= form_tag home_update_profile_path, method: :put, multipart: true do %>
<!--          <form>-->
<!--            <div class="row">-->
              <div class="form-group">
                <%= label_tag "username", "用户名" %>
                <%= text_field_tag "username", @user.username, class: "form-control border-input", disabled: true %>
              </div>
              <div class="form-group">
                <%= label_tag "email", "邮箱" %>
                <%= text_field_tag "email", @user.email, class: "form-control border-input"  %>
              </div>
              <div class="form-group">
                <%= label_tag "profession", "职业" %>
                <%= text_field_tag "profession", @user.profession, class: "form-control border-input" %>
              </div>
              <div class="form-group">
                <%= label_tag "avatar", "头像" %>
                <%= file_field_tag "avatar", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= label_tag "background", "背景图片" %>
                <%= file_field_tag "background", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= label_tag "introduction", "个人简介" %>
                <%= text_area_tag "introduction", @user.introduction, class: "form-control border-input", rows: 3 %>
              </div>
<!--              <div class="form-control">-->
                <button type="submit" class="btn btn-info btn-fill btn-wd">更新用户信息</button>
<!--              </div>-->
<!--            </div>-->
<!--            <div class="clearfix"></div>-->
<!--          </form>-->
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>