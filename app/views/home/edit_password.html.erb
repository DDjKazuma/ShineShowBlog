<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <!--              <form method="post" action="<%#= users_url %>">-->
        <%= form_tag home_update_password_path, method: :put, multipart: true do %>
          <div class="card-header">
            <h4 class="card-title">
              修改密码
            </h4>
          </div>
          <div class="card-content">
            <div class="form-group">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
              <%= label_tag "username", "用户名" %>
              <!--                    <label>用户名</label>-->
              <!--                    <input name="username" type="text" placeholder="请输入用户姓名" class="form-control">-->
              <%= text_field_tag "username",@user.username, placeholder: "请输入用户名", class: "form-control", disabled: true %>
            </div>
            <div class="form-group">
              <%= label_tag "password","用户密码"%>
              <%= password_field_tag "password",nil, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag "password_confirmation", "确认密码"%>
              <%= password_field_tag "password_confirmation", nil, class: "form-control" %>
            </div>
            <%= button_tag "提交", type: "submit", class: "btn btn-fill btn-info" %>
<!--                              <button type="submit" class="btn btn-fill btn-info">Submit</button>-->
          </div>
        <% end %>
        <!--              </form>-->
      </div> <!-- end card -->
    </div> <!--  end col-md-6  -->

  </div> <!-- end row -->
</div>
