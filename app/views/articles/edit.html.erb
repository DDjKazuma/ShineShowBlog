<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <!--        <form method="post" action="<%#= users_url %>">-->
        <%= form_tag article_path(@article.id), method: :put ,multipart: true do %>
          <div class="card-header">
            <h4 class="card-title">
              编辑
            </h4>
          </div>
          <div class="card-content">
            <div class="form-group">
              <!--              <label>标题</label>-->
              <%= label_tag "title", "名称" %>
              <!--              <input name="title" type="text" placeholder="请输入文章标题" class="form-control">-->
              <%= text_field_tag "title", @article.title, placeholder: "请输入文章标题", class: "form-control" %>
            </div>
            <div class="form-group">
              <!--              <label>邮箱</label>-->
              <%= label_tag "content", "内容" %>
              <!--              <input name="content" type="email" placeholder="请输入文章" class="form-control">-->
              <%= text_area_tag "content", @article.content, placeholder: "请填写文章内容", class: "form-control", rows:5 %>
            </div>

            <div class="form-group">
              <%= label_tag "picture", "图片" %>
              <%= file_field_tag "picture", class: "form-control" %>
            </div>
            <div class="form-group">
              <label>标签</label>
              <select multiple title="Multiple Select" class="selectpicker" data-style="btn-info btn-fill btn-block" data-size="7" name="tag_ids[]">
                <%= options_from_collection_for_select Tag.all, 'id', 'name', @article.tags.map{|tag| tag.id}  %>
              </select>
            </div>
            <button type="submit" class="btn btn-fill btn-info">Submit</button>
          </div>
        <% end %>
        <!--        </form>-->
      </div> <!-- end card -->
    </div> <!--  end col-md-6  -->

  </div> <!-- end row -->
</div>

