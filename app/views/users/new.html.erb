      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <div class="card">
<!--              <form method="post" action="<%#= users_url %>">-->
                <%= form_tag users_path, method: :post, multipart: true do %>
                <div class="card-header">
                  <h4 class="card-title">
                    创建用户
                  </h4>
                </div>
                <div class="card-content">
                  <div class="form-group">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                    <%= label_tag "username", "用户名" %>
<!--                    <label>用户名</label>-->
<!--                    <input name="username" type="text" placeholder="请输入用户姓名" class="form-control">-->
                    <%= text_field_tag "username",nil, placeholder: "请输入用户名", class: "form-control" %>
                  </div>
                  <div class="form-group">
<!--                    <label>邮箱</label>-->
                    <%= label_tag "email", "邮箱" %>
<!--                    <input name="email" type="email" placeholder="请输入用户邮箱" class="form-control">-->
                    <%= text_field_tag "email", nil, placeholder: "请输入用户邮箱", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= label_tag "profession", "职业"%>
                    <%= text_field_tag "profession", nil, placeholder: "请输入用户的职业", class: "form-control" %>
                  </div>
<!--                  <div class="form-group">-->
<!--                    <label>密码</label>-->
                    <%#= label_tag "password", "密码" %>
<!--                    <input name="password" type="text" placeholder="请输入用户密码" class="form-control">-->
                    <%#= text_field_tag "password", nil, placeholder: '请输入用户密码', class: "form-control" %>
<!--                  </div>-->
                  <div class="form-group">
                    <%= label_tag "用户头像" %>
                    <%= file_field_tag "avatar", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= label_tag "背景图片" %>
                    <%= file_field_tag "background", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= label_tag "introduction", "个人简介" %>
<!--                    <label>个人简介</label>-->
<!--                      <textarea name="introduction"class="form-control" placeholder="请填写该用户的个人简介" rows="3"></textarea>-->
                    <%= text_area_tag "password", nil, placeholder: "请填写该用户的个人简介",class: "form-control", rows: 3 %>
                  </div>
